@using MVCBlog.Controllers
@using MVCBlog.HelpClass
@model IEnumerable<MVCBlog.Models.Post>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
          @Html.DisplayNameFor(post=>post.Author.FullName) @*Whant to take here the FullName*@
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            Blog
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td> 
            @Html.DisplayFor(modelItem => item.Author.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Utils.MakeCutText(item.Body,200)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {id = item.Id})
            @Html.ActionLink("Details", "Details", new {id = item.Id})
            @Html.ActionLink("Delete", "Delete", new {id = item.Id})
        </td>
    </tr>
}

</table>
